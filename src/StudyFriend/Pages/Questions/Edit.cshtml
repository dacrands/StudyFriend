@page
@model StudyFriend.Pages.Questions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-lg-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Question.Topic" class="control-label"></label>
                <select asp-for="Question.TopicID" class="form-control"
                        asp-items="@Model.TopicNameSL">
                    <option value="">-- Select Topic --</option>
                </select>
                <span asp-validation-for="Question.TopicID" class="text-danger" />
            </div>
            <input type="hidden" asp-for="Question.QuestionID" />
            <div class="form-group">
                <label asp-for="Question.Body" class="control-label"></label>
                <input asp-for="Question.Body" class="form-control" />
                <span asp-validation-for="Question.Body" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
